<h1>注文履歴一覧</h1>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admins_order_path(order.id) do %>
          <%= order.create_at %>
        <% end %>
      </td>
      <td><%= order.customers.last_name %><%= order.customers.first_name %></td>
      <td><%= order.order_details.sum(:amount) %></td>
      <td>enumで指定</td>
    </tr>
  <% end %>
</table>