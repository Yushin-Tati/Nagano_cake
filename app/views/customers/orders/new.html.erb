<h1>注文情報入力</h1>
  <div>
    <h2>支払方法</h2>
    <p>enumで指定</p>
  </div>
  <div>
    <%= form_with url: orders_confirm_path, local: true do |f| %>
    <h2>お届け先</h2>
    <div>
      <%= f.radio_button :select, 0, checked: true %><%= f.label "ご自身の住所" %><br/>
        〒<%= @customer.postal_code %> <%= @customer.address %><br/>
        <%= f.hidden_field :postal_code, value: @customer.postal_code %> <%= f.hidden_field :address, value: @customer.address %>
        <%= @customer.last_name %><%= @customer.first_name %>
        <%= f.hidden_field :customer_id, value: @customer.id %>
    </div>
    <div>
      <%= f.radio_button :select, 1 %><%= f.label "登録済住所から選択" %><br/>
        <%= f.select :shipping_address, @customer_shipping_addresses.map{ |shipping_address| [
          shipping_address.postal_code + shipping_address.address + shipping_address.name, shipping_address.id
          ]}, {include_blank: "選択してください"} %>
    </div>
    <div>
      <%= f.radio_button :select, 2 %><%= f.label "新しいお届け先" %><br/>
        <span>郵便番号（ハイフンなし）</span>
        <%= f.text_field :p %>
        <span>住所</span>
        <%= f.text_field :a %>
        <span>宛名</span>
        <%= f.text_field :n %>
    </div>
    <%= f.submit "確認画面に進む" %>
    <% end %>
  </div>


