<% if @customer.errors.any? %>
   <div class="alert alert-warning">
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>会員情報編集</h1>
<%= form_with model: @customer, local:true do |f| %>
  <table>
    <tr>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>
  <%= f.submit '編集内容を保存' %>
<% end %>
<%= link_to "退会する", customers_unsubscribe_path %>