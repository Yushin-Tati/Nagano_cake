<h1>配送先登録/一覧</h1>
<div>
  <%= form_with model: @address, local:true do |f| %>
  <table>
    <tr>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <td>郵便番号（ハイフンなし）</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <%= f.submit '新規登録' %>
  </table>
  <% end %>
</div>
<div>
  <table>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id) %> <%= link_to "削除する", address_path(address.id), method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>