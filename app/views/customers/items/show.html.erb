<table>
  <tr>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <td><%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
    <td>
      <h2><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <p>￥<%= @item.price*1.08 %><span>(税込)</span></p>
    </td>
  </tr>
</table>
<% if @duplication == 0 %>
  <%= form_with model: @cart_item, local:true do |f| %>
    <%= f.number_field :amount %>
    <%= f.hidden_field :item_id , value: @item.id %>
    <%= f.submit "カートに入れる" %>
  <% end %>
<% else %>
  <div>カートに追加済み</div>
<% end %>