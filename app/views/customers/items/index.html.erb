<h1>商品一覧</h1>
<p>（全<%= @items.count %>件）</p>
<% @items.each do |item| %>
  <div>
    <%= link_to item_path(item.id) do %>
      <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <% end %>
    <%= item.name %>
    ￥<%= item.price %>
  </div>
<% end %>